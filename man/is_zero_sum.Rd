\name{is_zero_sum}
\alias{is_zero_sum}
\title{Check if a Game is Zero-Sum}
\description{
For a 2-player game, check whether all payoff sums are zero.
}
\usage{
is_zero_sum(game, tol = 1e-10)
}
\arguments{
\item{game}{A NormalFormGame object.}
\item{tol}{Numeric tolerance.}
}
\value{
Logical scalar.
}
